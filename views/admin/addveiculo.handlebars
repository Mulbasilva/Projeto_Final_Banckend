{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        
        <h4>Novo veiculo</h4>
        <form action="/admin/veiculos/novo" method="post" />
            <label for="marca">Marca:</label>
            <input type="text" name="marca" class="form-control"/>
            <label for="cor">Côr:</label>
            <input type="text" name="cor" class="form-control"/>
            <label for="placa">Placa:</label>
            <input type="text" name="placa" class="form-control">
            <label for="detalhes">Detalhes:</label>
            <textarea name="detalhes" class="form-control" placeholder="Mais sobre o proprietário do veiculo..."></textarea>
            <label for="propId">Proprietario: </label>
            <select name="propId" class="form-select">
                {{#each proprietarios}}
                    <option value="{{_id}}">{{nomeCompleto}}</option>
                {{else}}
                    <option value="0">Nenhum proprietario registrado</option>
                {{/each}}
            </select>
            <a href="#"><button type="submit" class="btn btn-outline-success">Cadastrar veiculo</button></a>
        </form>
    </div>

</div>